<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:framework:Widget/etc/widget.xsd">

    <widget id="merlin_productfinder_widget"
            class="Merlin\ProductFinder\Block\Widget\Finder"
            placeholder_image="">
        <label translate="true">Merlin Product Finder</label>
        <description translate="true">
            Embed the Product Finder anywhere (CMS pages, static blocks, layout updates).
        </description>

        <parameters>
            <parameter name="title"
                       xsi:type="text"
                       visible="true"
                       sort_order="10"
                       required="false">
                <label translate="true">Heading (optional)</label>
            </parameter>

            <parameter name="show_pre_post"
                       xsi:type="select"
                       visible="true"
                       sort_order="20"
                       required="false">
                <label translate="true">Show Pre/Post Custom HTML</label>
                <options>
                    <option name="yes" value="1" selected="true">
                        <label translate="true">Yes (use config)</label>
                    </option>
                    <option name="no" value="0">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
