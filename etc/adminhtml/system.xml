<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="merlin_productfinder"
                 translate="label"
                 type="text"
                 sortOrder="999"
                 showInDefault="1"
                 showInWebsite="1"
                 showInStore="1">
            <label>Merlin Product Finder</label>
            <tab>catalog</tab>
            <resource>Merlin_ProductFinder::config</resource>

            <!-- ================== CACHE TOOLS ================== -->

        <group id="tools" translate="label" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
         <label>Tools</label>

           <field id="make_cache" translate="label" type="note" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Make Finder Cache</label>
            <frontend_model>Merlin\ProductFinder\Block\Adminhtml\System\Config\Button\Build</frontend_model>
            <comment>Builds per-attribute-set, in-stock-only option lists and stores them in cache for fast frontend loads.</comment>
          </field>

          <field id="clear_cache" translate="label" type="note" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
           <label>Clear Finder Cache</label>
           <frontend_model>Merlin\ProductFinder\Block\Adminhtml\System\Config\Button\Clear</frontend_model>
           <comment>Clears all cached Product Finder option lists.</comment>
          </field>
        </group>

            <!-- ================== GENERAL ================== -->
            <group id="general"
                   translate="label"
                   sortOrder="10"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>General</label>

                <field id="enabled"
                       translate="label"
                       type="select"
                       sortOrder="10"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Enable</label>
                    <source_model>Merlin\ProductFinder\Model\Config\Source\YesNo</source_model>
                </field>

                <field id="show_layered_nav"
                       translate="label"
                       type="select"
                       sortOrder="20"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Show Layered Navigation on Results</label>
                    <source_model>Merlin\ProductFinder\Model\Config\Source\YesNo</source_model>
                </field>

                <!-- which attribute sets can even appear on the frontend -->
                <field id="allowed_attribute_sets"
                       translate="label"
                       type="multiselect"
                       sortOrder="30"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0">
                    <label>Allowed Attribute Sets for Finder</label>
                    <source_model>Merlin\ProductFinder\Model\Config\Source\AttributeSets</source_model>
                    <comment>Select which product attribute sets can be chosen as the first step in the Product Finder.</comment>
                </field>

                <!-- new: per-attribute-set profiles (JSON) -->
                <field id="attribute_set_profiles"
                       translate="label"
                       type="textarea"
                       sortOrder="40"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                       <label>Attribute Set Profiles (JSON)</label>
                       <frontend_model>Merlin\ProductFinder\Block\Adminhtml\System\Config\Field\Profiles</frontend_model>
                       <comment>Click here first to save your profile JSON before clicking "Save Config".</comment>
                </field>
            </group>

            <!-- ================== FORM LAYOUT ================== -->
            <group id="layout"
                   translate="label"
                   sortOrder="20"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Above and Below Content</label>
               
                <field id="pre_html"
                       translate="label"
                       type="editor"
                       sortOrder="20"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Custom HTML (Above Form)</label>
                </field>

                <field id="post_html"
                       translate="label"
                       type="editor"
                       sortOrder="30"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Custom HTML (Below Form)</label>
                </field>
            </group>
        </section>
    </system>
</config>
